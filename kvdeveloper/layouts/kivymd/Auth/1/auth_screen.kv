#: import images kvdeveloper.config.IMAGE_LIBRARY

<{{parsed_name}}View>:
    MDStackLayout:
        size_hint: 1, 1
        spacing: 15

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: [20, 20, 20, 20]

            MDIconButton:
                style: "standard"
                icon: "arrow-left"

        MDScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: [20, 20, 20, 20]
                spacing: 15

                LoginBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    spacing: "10dp"

                MDWidget:
                    size_hint: 1, None
                    height: dp(45)

<LoginBoxLayout@MDBoxLayout>:
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        spacing: "10dp"

        MDLabel:
            text: "Login"
            font_style: "Display"
            role: "small"
            halign: "center"
            valign: "center"
            adaptive_height: True
            theme_text_color: "Custom"
            text_color: app.theme_cls.primaryColor

        MDAnchorLayout:
            size_hint: 1, None
            padding: [15, 15, 15, 15]
            FitImage:
                source: f"{images}/basic/login_illustration400.png"
                size_hint: 1, None
                adaptive_height: True

    MDWidget:
        size_hint: 1, None
        height: dp(8)

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        padding: [10, 10, 10, 10]
        spacing: "15dp"

        LoginForm:
            orientation: 'vertical'
            adaptive_height: True
            padding: [10, 10, 10, 10]
            spacing: "15dp"

        RelLayout:

        MDAnchorLayout:
            size_hint: 1, None
            height: content.height

            ExternalLoginSite:
                id: content
                orientation: 'vertical'
                adaptive_size: True
                padding: [10, 10, 10, 10]

<RelLayout@MDBoxLayout>:
    adaptive_height: True

    MDDivider:
        size_hint: None, None

    MDLabel:
        text: "Or Login with"
        font_style: "Body"
        role: "medium"
        halign: "center"
        valign: "center"

    MDDivider:
        size_hint: None, None
        pos_hint: {'center_y': 0.5}

<ExternalLoginSite@MDBoxLayout>:
    MDGridLayout:
        rows: 2
        cols: 2
        adaptive_size: True

        MDAnchorLayout:
            size_hint: None, None

            FitImage:
                source: f"{images}/basic/google128.png"
                size_hint: None, None
                size: "65sp","65sp"

            MDIconButton:
                icon: "blank"
                size_hint: 1, 1

        MDAnchorLayout:
            size_hint: None, None

            MDIconButton:
                icon: "github"
                size_hint: 1, 1
                theme_icon_color: "Custom"
                icon_color: "black"
                theme_font_size: "Custom"
                font_size: "75sp"

        MDAnchorLayout:
            size_hint: None, None

            FitImage:
                source: f"{images}/basic/stack_overflow128.png"
                size_hint: None, None
                size: "75sp","75sp"

            MDIconButton:
                icon: "blank"
                size_hint: 1, 1

        MDAnchorLayout:
            size_hint: None, None

            FitImage:
                source: f"{images}/kvdeveloper/kvdeveloper_logo128.png"
                size_hint: None, None
                size: "75sp","75sp"

            MDIconButton:
                icon: "blank"
                size_hint: 1, 1

<LoginForm@MDBoxLayout>:
    MDTextField:
        mode: "filled"
        theme_line_color: "Custom"
        line_color_normal: [1, 1, 1, 0]

        MDTextFieldLeadingIcon:
            icon: "account"
            theme_icon_color: "Custom"
            icon_color_normal: app.theme_cls.primaryColor
            icon_color_focus: app.theme_cls.primaryColor

        MDTextFieldHintText:
            text: "Username"
            theme_text_color: "Custom"
            text_color_normal: [0, 0, 0, 0.7]

    MDTextField:
        mode: "filled"
        theme_line_color: "Custom"
        line_color_normal: [1, 1, 1, 0]

        MDTextFieldLeadingIcon:
            icon: "lock"
            theme_icon_color: "Custom"
            icon_color_normal: app.theme_cls.primaryColor
            icon_color_focus: app.theme_cls.primaryColor

        MDTextFieldHintText:
            text: "Password"
            theme_text_color: "Custom"
            text_color_normal: [0, 0, 0, 0.7]

        MDTextFieldTrailingIcon:
            icon: "eye"
            theme_icon_color: "Custom"
            icon_color_normal: app.theme_cls.primaryColor
            icon_color_focus: app.theme_cls.primaryColor

    MDExtendedFabButton:
        pos_hint: {"center_x": 0.5}
        size_hint: 1, None
        theme_bg_color: "Custom"
        fab_state: "expand"
        md_bg_color: app.theme_cls.secondaryFixedDimColor

        MDExtendedFabButtonText:
            text: "Login"
            theme_font_size: "Custom"
            font_size: "19sp"
