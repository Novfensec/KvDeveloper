<ITDCard>:
    orientation: 'vertical'
    adaptive_height: True
    padding: [15, 15, 15, 15]
    spacing: 25
    theme_bg_color: "Custom"
    md_bg_color: app.theme_cls.surfaceContainerLowestColor

    FitImage:
        id: image
        size_hint: 1, None
        radius: self.parent.radius
        height: root.image_height
        source: root.source

    MDDivider:

    MDLabel:
        text: root.title
        font_style: "Title"
        role: "large"
        bold: True
        valign: "center"
        adaptive_height: True

    MDLabel:
        text: root.desc
        font_style: "Body"
        role: "large"
        multiline: True
        color: app.theme_cls.onSurfaceVariantColor
        valign: "center"
        adaptive_height: True

    MDLabel:
        font_style: "Body"
        role: "large"
        text: f"continue reading..."
        color: "blue"
        adaptive_height: True
        halign: "right"
